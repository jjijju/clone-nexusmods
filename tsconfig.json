{
	"compilerOptions": {
		// Type Checking
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strict": true,

		// Modules
		"baseUrl": "src",
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,

		// Emit
		"noEmit": true,
		"noEmitOnError": true,
		"removeComments": true,
		"outDir": "./build/",
		"sourceMap": true,

		// JavaScript Support
		"allowJs": true,

		// Interop Constraints
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"forceConsistentCasingInFileNames": true,

		// Language and Environment
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"jsx": "react",
		"lib": ["es5", "es6", "es7", "es2015", "es2017", "dom", "dom.iterable", "esnext", "es2020"],
		"target": "esnext",

		// Completeness
		"skipLibCheck": true,

		// Output Formatting
		"noErrorTruncation": true,  
	},
	"include": ["./src/**/*"]
}
